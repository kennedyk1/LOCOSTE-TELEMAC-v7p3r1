<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="Sandpit" rank="5" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <data title="SANDPIT" author="M.Knaapen" contact="www.opentelemac.org" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="scal"
       do="translate;run;cas;princi"
       code="telemac2d" target="t2d_sandpit.cas"
       title="Run Sandpit with coupled sisyphe telemac"
   />
   <action xref="para"
       do="translate;run;cas;princi" ncsize="4"
       code="telemac2d" target="t2d_sandpit.cas"
       title="Run Sandpit with coupled sisyphe telemac"
   />
<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="scal:SISRES" />
      <v2 vars=":map" target="fis_sandpit.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[1.e-4])" />
   </cast>
   <cast xref="ref-2" config="oneofall" time="[-1]" type="2d:">
      <v4 vars=":map" target="para:SISRES" />
      <v5 vars=":map" target="fis_sandpit.slf" />
      <v6 vars="mapdiff(v4,v5)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v6,[1.e-4])" />
   </cast>
   <cast xref="cas-parall" config="oneofall" time="[-1]" type="2d:">
      <v7 vars=":map" target="scal:SISRES" />
      <v8 vars=":map" target="para:SISRES" />
      <v9 vars="mapdiff(v7,v8)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v9,[1.e-4])" />
   </cast>
   <cast xref="ref-1-t2d" config="oneofall" time="[-1]" type="2d:">
      <v10 vars=":map" target="scal:T2DRES" />
      <v11 vars=":map" target="f2d_sandpit.slf" />
      <v12 vars="mapdiff(v10,v11)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v12,[1.e-4])" />
   </cast>
   <cast xref="ref-2-t2d" config="oneofall" time="[-1]" type="2d:">
      <v13 vars=":map" target="para:T2DRES" />
      <v14 vars=":map" target="f2d_sandpit.slf" />
      <v15 vars="mapdiff(v13,v14)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v15,[1.e-4])" />
   </cast>
   <cast xref="cas-parall-t2d" config="oneofall" time="[-1]" type="2d:">
      <v16 vars=":map" target="scal:T2DRES" />
      <v17 vars=":map" target="para:T2DRES" />
      <v18 vars="mapdiff(v16,v17)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v18,[1.e-4])" />
   </cast>

<!-- Actions on output files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
-->
   <cast xref="Data" type="1d:v-section" config="oneofall" >
      <python>
def scalxy(d0):
   return [],[],10*d0.support-50,10*d0.values
      </python>
      <bedinit vars="BedInitial" target="experiment_data.csv" />
      <v19 vars="scalxy(bedinit)" />
      <bedmeas vars="BedMeasured" target="experiment_data.csv" />
      <v20 vars="scalxy(bedmeas)" />
   </cast>

<!-- plot1d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   -->
   <deco xref="figure"><look xlabel='location(m)' ylabel='Bed level (m)' title='Comparison of model and experiment morphology' legend.location='lower right' /></deco>
   <deco xref="black"><look color="k" label='Initial bed' /></deco>
   <deco xref="dots"><look color="b" marker='*' linestyle='None' label='Measured' /></deco>
   <deco xref="red"><look color="r" label='Modelled' /></deco>

   <plot1d xref="Sandpit_2_profiles" type="1d:v-section" config="oneofall" size="(10;7)" deco="figure">
      <layer vars="v19:line" target="Data:v19" deco="black" />
      <layer vars="v20:line" target="Data:v20" deco="dots" />
   	  <layer vars="bottom:line" extract="(50.0;0.5)(130.0;0.5)" target="scal:SISRES" time="[20]" deco="red" />
   </plot1d>

</validation>
