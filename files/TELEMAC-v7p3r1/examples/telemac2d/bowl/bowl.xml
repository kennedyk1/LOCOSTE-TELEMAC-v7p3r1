<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="weirs" rank="3" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="weirs" author="R.Ata" contact="www.opentelemac.org" />
   </deco>
   <deco xref="vect">
      <look colour="jet.xml" />
   </deco>
   <deco xref="line">
      <look colour="k" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       code="telemac2d" target="t2d_bowl_fe.cas"
       title="parabolic bowl finite elements scalar mode"
   />
   <action xref="2"
       do="translate;run;cas;princi" ncsize="4"
       code="telemac2d" target="t2d_bowl_fe.cas"
       title="parabolic bowl finite elements parallel mode"
   />
   <action xref="3"
       do="translate;run;cas;princi"
       code="telemac2d" target="t2d_bowl_vf.cas"
       title="parabolic bowl finite volumes scalar mode"
   />
<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:T2DRES" />
      <v2 vars=":map" target="f2d_bowl_fe.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[1e-2,1e-2,1e-4,1e-4,1e-4])" />
   </cast>
   <cast xref="ref-2" config="oneofall" time="[-1]" type="2d:">
      <v4 vars=":map" target="2:T2DRES" />
      <v5 vars=":map" target="f2d_bowl_fe.slf" />
      <v6 vars="mapdiff(v4,v5)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v6,[1e-2,1e-2,1e-4,1e-4,1e-4])" />
   </cast>
   <cast xref="cas-parall" config="oneofall" time="[-1]" type="2d:">
      <v7 vars=":map" target="1:T2DRES" />
      <v8 vars=":map" target="2:T2DRES" />
      <v9 vars="mapdiff(v7,v8)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v9,[1e-3,1e-3,1e-5,1e-4,1e-4])" />
   </cast>
   <cast xref="ref-3" config="oneofall" time="[-1]" type="2d:">
      <v10 vars=":map" target="3:T2DRES" />
      <v11 vars=":map" target="f2d_bowl_vf_gb.slf" />
      <v12 vars="mapdiff(v10,v11)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v12,[1e-2,1e-2,1e-4,1e-4,1e-4])" />
   </cast>
<!-- Actions on output files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->

<!-- plot1d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   -->
   <plot1d xref="FreeSurface_Section" type="v-section" size="(12;5)" config="together" >
      <layer vars="free surface:line" extract="(-4000;0)(4000;0)" target="1:T2DRES" time="[0:-1]"/>
   </plot1d>

<!-- plot2d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
   <plot2d xref="Mesh" size="(10;10)" >
      <layer vars="bottom:mesh" target="1:T2DGEO" config="oneofall" />
   </plot2d>
   <plot2d xref="Bathy" size="(10;10)" >
      <layer vars="bottom:map" target="1:T2DRES" config="oneofall" />
   </plot2d>
    <plot2d xref="FreeSurface_fe" size="(10;10)" >
      <layer vars="free surface:map" target="1:T2DRES" config="oneofall" time="[-1]" />
   </plot2d>
   <plot2d xref="VelocityU_fe" size="(10;10)" >
      <layer vars="velocity U:map" target="1:T2DRES" config="oneofall" time="[-1]" />
   </plot2d>
   <plot2d xref="VelocityV_fe" size="(10;10)" >
      <layer vars="velocity V:map" target="1:T2DRES" config="oneofall" time="[-1]" />
   </plot2d>
    <plot2d xref="FreeSurface_vf_fr" size="(10;10)" >
      <layer vars="free surface:map" target="2:T2DRES" config="oneofall" time="[-1]" />
   </plot2d>
   <plot2d xref="VelocityU_vf_fr" size="(10;10)" >
      <layer vars="velocity U:map" target="2:T2DRES" config="oneofall" time="[-1]" />
   </plot2d>
   <plot2d xref="VelocityV_vf_fr" size="(10;10)" >
      <layer vars="velocity V:map" target="2:T2DRES" config="oneofall" time="[-1]" />
   </plot2d>

</validation>
