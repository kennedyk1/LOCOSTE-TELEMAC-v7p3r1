<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="dambreak" rank="3" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="dambreak" author="C-T.Pham" contact="www.opentelemac.org" />
   </deco>
   <deco xref="vect">
      <look colour="jet.xml" />
   </deco>
   <deco xref="line">
      <look colour="k" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       code="telemac2d" target="t2d_dambreak_v2p0.cas"
       title="dambreak scalar mode"
   />
   <action xref="2"
       do="translate;run;cas;princi" ncsize="4"
       code="telemac2d" target="t2d_dambreak_v2p0.cas"
       title="dambreak parallel mode"
   />
   <action xref="3"
       do="translate;run;cas;princi"
       code="telemac2d" target="t2d_dambreak_v1p0.cas"
       title="dambreak scalar mode"
   />
<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:T2DRES" />
      <v2 vars=":map" target="f2d_dambreak_v2p0.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[1e-2,1e-2,1e-2,1e-2,1e-5,1e-5])" />
   </cast>
   <cast xref="ref-2" config="oneofall" time="[-1]" type="2d:">
      <v4 vars=":map" target="2:T2DRES" />
      <v5 vars=":map" target="f2d_dambreak_v2p0.slf" />
      <v6 vars="mapdiff(v4,v5)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v6,[1e-2,1e-2,1e-2,1e-2,1e-5,1e-5])" />
   </cast>
   <cast xref="cas-parall" config="oneofall" time="[-1]" type="2d:">
      <v7 vars=":map" target="1:T2DRES" />
      <v8 vars=":map" target="2:T2DRES" />
      <v9 vars="mapdiff(v7,v8)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v9,[1e-2,1e-2,1e-2,1e-2,1e-5,1e-5])" />
   </cast>
   <cast xref="ref-3" config="oneofall" time="[-1]" type="2d:">
      <v10 vars=":map" target="3:T2DRES" />
      <v11 vars=":map" target="f2d_dambreak_v1p0.slf" />
      <v12 vars="mapdiff(v10,v11)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v12,[1e-2,1e-2,1e-2,1e-2,1e-5,1e-5])" />
   </cast>
<!-- Actions on output files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->

<!-- plot1d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   -->
   <plot1d xref="Water Depth v1" type="v-section" size="(12;5)" config="together">
      <layer vars="water depth:line" extract="(0;10)(20;10)" target="3:T2DRES" time="[0:-1:10]"/>
   </plot1d>
   <plot1d xref="Velocity U v1" type="v-section" size="(12;5)" config="together">
      <layer vars="velocity u:line" extract="(0;10)(20;10)" target="3:T2DRES" time="[0:-1:10]"/>
   </plot1d>

<!-- plot2d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
   <plot2d xref="Mesh" size="(10;10)" >
      <layer vars="hauteur d'eau:mesh" target="3:T2DGEO" config="oneofall" />
   </plot2d>
   <plot2d xref="WaterDepth_t3" size="(10;10)" >
      <layer vars="water depth:map" target="3:T2DRES" config="oneofall" time="[3]" />
   </plot2d>
   <plot2d xref="WaterDepth_tf" size="(10;10)" >
      <layer vars="water depth:map" target="3:T2DRES" config="oneofall" time="[-1]" />
   </plot2d>

</validation>
