<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="weirs" rank="3" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="weirs" author="R.Ata" contact="www.opentelemac.org" />
   </deco>
   <deco xref="free_surface">
      <look
         title="Free surface level profil along (0.0;0.0),(3000.0;3000.0)"
         xlabel='Profil abcissa ($m$)'
         ylabel='Free surface level ($m$)'
         ylim='(1.2, 2.4)'
         axes.grid="True"
         legend="True"
         legend.ncol="3"
         legend.position="lower center"
         legend.borderaxespad="-7"
         author="A.REBAI"
      />
   </deco>
   <deco xref="C_free_surface">
      <look
         label='Free surface at $t={}s$'
         time_in_label = "True"
      />
   </deco>

   <deco xref="tracer">
      <look
         title="Tracer level profil along (0.0;0.0),(3000.0;3000.0)"
         xlabel='Profil abcissa ($m$)'
         ylabel='Free surface level ($m$)'
         ylim='(50., 100.)'
         axes.grid="True"
         legend="True"
         legend.ncol="3"
         legend.position="lower center"
         legend.borderaxespad="-7"
         author="A.REBAI"
      />
   </deco>
   <deco xref="C_tracer">
      <look
         label='tracer at $t={}s$'
         time_in_label = "True"
      />
   </deco>

   <deco xref="Bottom_contour">
      <look
         title="Mesh and Bottom level"
         xticks_fontsize='10'
         set="xlabel('X $[m]$');ylabel('Y $[m]$')"
         author="A.REBAI"
      />
   </deco>
   <deco xref="M_Bottom_contour">
      <look
         cmap="jet"
         levels="np.linspace(-0.1,0.1,11)"
         colorbar="True"
         title_colorbar="Bottom $[m]$"
         shrink="0.4"
         orientation="horizontal"
         pad="0.2"
      />
   </deco>
   <deco xref="Velocity_contour1500">
      <look
         title="$t=1500.0s$"
         title_fontsize='16'
         xticks_fontsize='10'
         set="xlabel('X $[m]$');ylabel('Y $[m]$')"
         author="A.REBAI"
      />
   </deco>
   <deco xref="Velocity_contour3000">
      <look
         title="$t=3000.0s$"
         title_fontsize='16'
         xticks_fontsize='10'
         set="xlabel('X $[m]$');ylabel('Y $[m]$')"
         author="A.REBAI"
      />
   </deco>
   <deco xref="Velocity_contour4500">
      <look
         title="$t=4500.0s$"
         title_fontsize='16'
         xticks_fontsize='10'
         set="xlabel('X $[m]$');ylabel('Y $[m]$')"
         author="A.REBAI"
      />
   </deco>
   <deco xref="Velocity_contour6000">
      <look
         title="$t=6000.0s$"
         title_fontsize='16'
         xticks_fontsize='10'
         set="xlabel('X $[m]$');ylabel('Y $[m]$')"
         author="A.REBAI"
      />
   </deco>
   <deco xref="M_Velocity_contour">
      <look
         cmap="jet"
         levels="np.linspace(0, 0.6, 11)"
         colorbar="True"
         title_colorbar="Velocity $[m/s]$"
         shrink="0.2"
         orientation="horizontal"
         pad="0.2"
      />
   </deco>
   <deco xref="Velocity_arrow">
      <look
         color='grey'
         units='width'
         width='0.003'
         linewidths='0.01'
         key="yes"
         key_x='0.1'
         key_y='-0.1'
         key_length='1'
         key_label="1 $m.s^{-1}$"
         key_color="black"
         labelpos="S"
         coordinates="axes"
      />
   </deco>


<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       code="telemac2d" target="t2d_weirs.cas"
       title="weirs scalar mode"
   />
   <action xref="2"
       do="translate;run;cas;princi" ncsize="4"
       code="telemac2d" target="t2d_weirs.cas"
       title="weirs parallel mode"
   />

<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:T2DRES" />
      <v2 vars=":map" target="f2d_weirs.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[])" />
   </cast>
   <cast xref="ref-2" config="oneofall" time="[-1]" type="2d:">
      <v4 vars=":map" target="2:T2DRES" />
      <v5 vars=":map" target="f2d_weirs.slf" />
      <v6 vars="mapdiff(v4,v5)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v6,[])" />
   </cast>
   <cast xref="cas-parall" config="oneofall" time="[-1]" type="2d:">
      <v7 vars=":map" target="1:T2DRES" />
      <v8 vars=":map" target="2:T2DRES" />
      <v9 vars="mapdiff(v7,v8)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v9,[])" />
   </cast>
 -->
<!-- plot1d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   -->
   <plot1d xref="img/free_surface" type="v-section" extract="(0;0):(3000.;3000.0)" config="oneofall" time="[0;1;2;3;4]" deco="free_surface" size="(12;9)">
      <layer vars="free surface:line" target="1:T2DRES"  deco="C_free_surface"/>
   </plot1d>
   <plot1d xref="img/Tracer" type="v-section" extract="(0;0):(3000.;3000.0)" config="oneofall" time="[0;1;2;3;4]" deco="tracer" size="(12;9)">
      <layer vars="tracer 1:line" target="1:T2DRES"  deco="C_tracer"/>
   </plot1d>

<!-- plot2d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
   <!-- Plot a mesh into the PNG file "figure7.png".
      - Locations: extraction for the entire mesh
      - File:      extraction from file 1:T2DGEO above
  -->
   <plot2d xref="img/geo" config="oneofall" size="(12;5)" time="[0]" deco="Bottom_contour" >
      <layer vars="FOND:map" target="1:T2DGEO" deco="M_Bottom_contour"/>
      <layer vars="FOND:mesh" target="1:T2DGEO"/>
   </plot2d>

   <plot2d xref="img/figure_velo1500s" config="oneofall" time="[0]" size="(12;5)" deco="Velocity_contour1500">
      <layer vars="VELOCITY:map" target="1:T2DRES" deco="M_Velocity_contour"/>
   </plot2d>
   <plot2d xref="img/figure_velo3000s" config="oneofall" time="[1]" size="(12;5)" deco="Velocity_contour3000">
      <layer vars="VELOCITY:map" target="1:T2DRES" deco="M_Velocity_contour"/>
      <layer vars="VELOCITY:vector" target="1:T2DRES" deco="Velocity_arrow"/>
   </plot2d>
   <plot2d xref="img/figure_velo4500s" config="oneofall" time="[2]" size="(12;5)" deco="Velocity_contour4500">
      <layer vars="VELOCITY:map" target="1:T2DRES" deco="M_Velocity_contour"/>
      <layer vars="VELOCITY:vector" target="1:T2DRES" deco="Velocity_arrow"/>
   </plot2d>
   <plot2d xref="img/figure_velo6000s" config="oneofall" time="[3]" size="(12;5)" deco="Velocity_contour6000">
      <layer vars="VELOCITY:map" target="1:T2DRES" deco="M_Velocity_contour"/>
      <layer vars="VELOCITY:vector" target="1:T2DRES" deco="Velocity_arrow"/>
   </plot2d>


</validation>
