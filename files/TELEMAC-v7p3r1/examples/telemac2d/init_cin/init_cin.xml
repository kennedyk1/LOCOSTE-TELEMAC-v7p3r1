<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="init_cin" rank="3" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="init_cin" author="R.Ata" contact="www.opentelemac.org" />
   </deco>
   <deco xref="vect">
      <look colour="jet.xml" />
   </deco>
   <deco xref="line">
      <look colour="k" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       code="telemac2d" target="t2d_init_cin.cas"
       title="init_cin scalar mode"
   />
<action xref="2"
       do="translate;run;cas;princi" ncsize="8"
       code="telemac2d" target="t2d_init_cin.cas"
       title="init_cin parallel mode"
 />
<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:T2DRES" />
      <v2 vars=":map" target="f2d_init_cin.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[1e-2,1e-2,1e-2,1e-2,1e-2,1e-3,1e-5,1e-9,1e-9])" />
   </cast>
   <cast xref="ref-2" config="oneofall" time="[-1]" type="2d:">
      <v4 vars=":map" target="2:T2DRES" />
      <v5 vars=":map" target="f2d_init_cin.slf" />
      <v6 vars="mapdiff(v4,v5)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v6,[1e-2,1e-2,1e-2,1e-2,1e-2,1e-3,1e-5,1e-9,1e-9])" />
   </cast>
   <cast xref="cas-parall" config="oneofall" time="[-1]" type="2d:">
      <v7 vars=":map" target="1:T2DRES" />
      <v8 vars=":map" target="2:T2DRES" />
      <v9 vars="mapdiff(v7,v8)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v9,[1e-2,1e-2,1e-2,1e-2,1e-2,1e-3,1e-5,1e-9,1e-9])" />
   </cast>
<!-- Actions on output files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->

<!-- plot1d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   -->
<!-- /!\ Being ignored at the moment. Cf. <telemac2d>/.../011_bumpflu/bumpflu.xml
-->

<!-- plot2d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
   <plot2d xref="Mesh" size="(10;5)" >
      <layer vars="bottom:mesh" target="1:T2DGEO" config="oneofall" />
   </plot2d>
   <plot2d xref="Bathy" size="(10;5)" >
      <layer vars="bottom:map" target="1:T2DRES" config="oneofall" />
   </plot2d>
   <plot2d xref="FreeSurface_t1" size="(10;5)" >
      <layer vars="free surface:map" target="1:T2DRES" config="oneofall" time="[1]" />
   </plot2d>
   <plot2d xref="FreeSurface_tf" size="(10;5)" >
      <layer vars="free surface:map" target="1:T2DRES" config="oneofall" time="[-1]" />
   </plot2d>
   <plot2d xref="Turb_Visco_tf" size="(10;5)" >
      <layer vars="viscosity:map" target="1:T2DRES" config="oneofall" time="[-1]" />
   </plot2d>

</validation>
