<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="case" rank="5" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="Next_Comput" author="T.Fouquet" contact="www.opentelemac.org" />
   </deco>
   <deco xref="vect">
      <look colour="jet.xml" />
   </deco>
   <deco xref="line">
      <look colour="k" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       code="tomawac" target="next_comput.cas"
       title="Next_Comput scalar mode"
   />
   <action xref="2"
       do="translate;run;cas;princi" ncsize="4"
       code="tomawac" target="next_comput.cas"
       title="Next_Comput parallel mode"
   />
<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:WACRES" />
      <v2 vars=":map" target="ref.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[1e-4, 1e-2,1e-2,1e-5,1e-4,1e-4,1e-4 ])" />
   </cast>
   <cast xref="ref-2" config="oneofall" time="[-1]" type="2d:">
      <v4 vars=":map" target="2:WACRES" />
      <v5 vars=":map" target="ref.slf" />
      <v6 vars="mapdiff(v4,v5)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v6,[1e-4, 1e-2,1e-2,1e-5,1e-4,1e-4,1e-4 ])" />
   </cast>
   <cast xref="cas-parall" config="oneofall" time="[-1]" type="2d:">
      <v7 vars=":map" target="1:WACRES" />
      <v8 vars=":map" target="2:WACRES" />
      <v9 vars="mapdiff(v7,v8)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v9,[1e-4, 1e-2,1e-2,1e-5,1e-4,1e-4,1e-4 ])" />
   </cast>

<!-- Actions on output files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->

<!-- plot1d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   -->
   <deco xref="blust">
      <look cmap="BluSteel.xml" levels="np.arange(0,0.12,0.01)" extend="'max'"/>
   </deco>

   <deco xref="trottoir">
      <look cmap="Blues.xml" levels="np.arange(0,0.12,0.01)" extend="'max'"/>
   </deco>
      <plot2d xref="img/results" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('WAVE HEIGHT')" >
      <layer vars="WAVE HEIGHT HM0 :map" target="1:WACRES" deco="trottoir"/>
   </plot2d>

<!-- plot2d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
</validation>
