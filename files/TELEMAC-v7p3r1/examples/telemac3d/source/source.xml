<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="case" rank="3" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="source" author="C-T.Pham" contact="www.opentelemac.org" />
   </deco>
   <deco xref="vect">
      <look colour="jet.xml" />
   </deco>
   <deco xref="line">
      <look colour="k" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       code="telemac3d" target="t3d_source.cas"
       title="source scalar mode"
   />
   <action xref="2"
       do="translate;run;cas;princi" ncsize="4"
       code="telemac3d" target="t3d_source.cas"
       title="source parallel mode"
   />
   <action xref="3"
       do="translate;run;cas;princi"
       code="telemac3d" target="t3d_source_nn.cas"
       title="source (given by node numbers) scalar mode"
   />
   <action xref="4"
       do="translate;run;cas;princi" ncsize="4"
       code="telemac3d" target="t3d_source_nn.cas"
       title="source parallel mode"
   />
<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:T3DRES" />
      <v2 vars=":map" target="f3d_source.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[1.E-7,1.E-6,1.E-6,1.E-7,1.E-5,1.E-5,1.E-5])" />
   </cast>
   <cast xref="ref-2" config="oneofall" time="[-1]" type="2d:">
      <v4 vars=":map" target="2:T3DRES" />
      <v5 vars=":map" target="f3d_source.slf" />
      <v6 vars="mapdiff(v4,v5)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v6,[1.E-7,1.E-6,1.E-6,1.E-7,1.E-5,1.E-5,1.E-5])" />
   </cast>
   <cast xref="cas-parall" config="oneofall" time="[-1]" type="2d:">
      <v7 vars=":map" target="1:T3DRES" />
      <v8 vars=":map" target="2:T3DRES" />
      <v9 vars="mapdiff(v7,v8)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v9,[1.E-7,1.E-6,1.E-6,1.E-7,1.E-5,1.E-5,1.E-5])" />
   </cast>
   <cast xref="ref-3" config="oneofall" time="[-1]" type="2d:">
      <v10 vars=":map" target="3:T3DRES" />
      <v11 vars=":map" target="1:T3DRES" />
      <v12 vars="mapdiff(v10,v11)" />
      <return title="Comparison with the last time frame of the result file of ref 1."
         fail="checkval(v12,[1.E-15])" />
   </cast>
   <cast xref="ref-4" config="oneofall" time="[-1]" type="2d:">
      <v13 vars=":map" target="4:T3DRES" />
      <v14 vars=":map" target="2:T3DRES" />
      <v15 vars="mapdiff(v13,v14)" />
      <return title="Comparison with the last time frame of the result file of ref 2."
         fail="checkval(v12,[1.E-15])" />
   </cast>
   <cast xref="cas-parall-nn" config="oneofall" time="[-1]" type="2d:">
      <v16 vars=":map" target="3:T3DRES" />
      <v17 vars=":map" target="4:T3DRES" />
      <v18 vars="mapdiff(v16,v17)" />
      <return title="Comparison between sequential and parallel run of cases 3-4."
         fail="checkval(v18,[1.E-7,1.E-6,1.E-6,1.E-7,1.E-5,1.E-5,1.E-5])" />
   </cast>
