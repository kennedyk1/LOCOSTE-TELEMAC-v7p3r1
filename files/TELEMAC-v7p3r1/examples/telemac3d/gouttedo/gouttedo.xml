<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="case" rank="3" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="pluie" author="C-T.Pham" contact="www.opentelemac.org" />
   </deco>
   <deco xref="vect">
      <look colour="jet.xml" />
   </deco>
   <deco xref="line">
      <look colour="k" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       code="telemac3d" target="t3d_gouttedo.cas"
       title="gouttedo scalar mode"
   />
   <action xref="2"
       do="translate;run;cas;princi" ncsize="4"
       code="telemac3d" target="t3d_gouttedo.cas"
       title="gouttedo parallel mode"
   />
<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:T3DRES" />
      <v2 vars=":map" target="f3d_gouttedo.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[1.E-7])" />
   </cast>
   <cast xref="ref-2" config="oneofall" time="[-1]" type="2d:">
      <v4 vars=":map" target="2:T3DRES" />
      <v5 vars=":map" target="f3d_gouttedo.slf" />
      <v6 vars="mapdiff(v4,v5)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v6,[1.E-7])" />
   </cast>
   <cast xref="cas-parall" config="oneofall" time="[-1]" type="2d:">
      <v7 vars=":map" target="1:T3DRES" />
      <v8 vars=":map" target="2:T3DRES" />
      <v9 vars="mapdiff(v7,v8)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v9,[1.E-7])" />
   </cast>

<!-- Actions on output files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->

<!-- plot1d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   -->
   <plot1d xref="timeseries" type="history" config="together" time="[0:-1]" size="(12;7)" >
      <layer vars="Z:line" extract="(10;10)" target="1:T3DRES" />
   </plot1d>
   <plot1d xref="section1d" type="v-section" config="together"  size="(12;7)" >
      <layer vars="Z:line" extract="(0;10)(20;10)" target="1:T3DRES" time="[0:-1]"/>
   </plot1d>

<!-- plot2d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
   <plot2d xref="mesh" config="oneofall" time="[-1]" size="(12;7)" >
      <layer vars="elevation z:mesh" target="1:T3DRES" />
   </plot2d>
   <plot2d xref="mesh_section" type="v-section" config="oneofall" time="[-1]" size="(12;7)" >
      <layer vars="elevation Z:mesh" extract="(0;10)(20;10)" target="1:T3DRES"  />
   </plot2d>
   <plot2d xref="z_section2d" type="v-section" config="oneofall" time="[-1]" size="(12;7)" >
      <layer vars="elevation Z:map" extract="(0;10)(20;10)" target="1:T3DRES"  />
   </plot2d>
   <plot2d xref="z_map_t5" config="oneofall" time="[5]" size="(12;7)" >
      <layer vars="elevation Z:map" extract="[]#[2]" target="1:T3DRES"  />
   </plot2d>
   <plot2d xref="z_map_t8" config="oneofall" time="[8]" size="(12;7)" >
      <layer vars="elevation Z:map" extract="[]#[2]" target="1:T3DRES"  />
   </plot2d>

</validation>
